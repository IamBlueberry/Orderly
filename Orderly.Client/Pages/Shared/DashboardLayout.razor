
@inherits LayoutComponentBase

@namespace Orderly.Client.Pages.Shared
@layout MainLayout

<style>
    .dashboard-main {
        max-width: 100%;
        min-height: calc(100vh - var(--navbar-height));
        position: relative;
        z-index: 1;
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .sidebar {
        width: 220px;
        min-width: 220px;
        max-width: 220px;
        background-color: var(--nav-bg);
        border-right: 2px solid var(--border);
        position: relative;
        transition: transform 0.3s ease;
        overflow-y: auto;
        z-index: 1050;
    }

    @@media (max-width: 991.98px) {
        .sidebar {
            position: fixed;
            top: 70px;
            left: 0;
            width: 100vw;
            height: calc(100vh - 70px);
            max-width: 100vw;
            transform: translateX(-100%);
            box-shadow: 3px 0 12px rgba(0,0,0,0.5);
        }

        .sidebar.show {
            transform: translateX(0);
        }
    }

    .sidebar h4 {
        font-weight: 600;
        color: var(--fg);
    }

    .sidebar .nav-link {
        color: var(--fg);
        font-weight: 500;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        transition: background 0.2s ease, color 0.2s ease;
        display: flex;
        align-items: center;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.05);
        text-decoration: none;
    }

    [data-theme="light"] .sidebar .nav-link:hover {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .sidebar .nav-link.active {
        background-color: transparent;
        color: var(--primary);
    }

    .sidebar .nav-link.active i {
        color: var(--primary);
    }

    .sidebar .nav-link i {
        margin-right: 0.5rem;
        font-size: 1.2rem;
    }

    .orders-dropdown-toggle {
        cursor: pointer;
        user-select: none;
        justify-content: space-between;
    }

    .orders-dropdown-toggle i.arrow {
        transition: transform 0.3s ease;
    }

    .orders-dropdown-toggle[aria-expanded="true"] i.arrow {
        transform: rotate(90deg);
    }

    .orders-submenu {
        list-style: none;
        padding-left: 1.5rem;
        margin: 0.25rem 0 0 0;
    }

    .orders-submenu .nav-link {
        padding: 0.5rem 1rem;
        font-weight: 400;
        font-size: 0.9rem;
    }

    .dashboard-main {
        max-width: 100%;
        position: relative;
        z-index: 1;
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .sidebar-toggle-btn {
        position: fixed;
        top: 80px;
        left: 12px;
        z-index: 1101;
        display: none;
    }

    @@media (max-width: 991.98px) {
        .sidebar-toggle-btn {
            display: inline-block;
        }

        .dashboard-main {
            padding-top: 60px;
        }
    }

    /*
        Dashboard does not display site footer
    */

    .site-footer {
        display: none !important;
    }
</style>

<div class="dashboard-layout d-flex">
    <nav class="sidebar p-3 @(IsSidebarExpanded ? "show" : "")" aria-label="Dashboard Sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <NavLink class="nav-link" href="/dashboard/overview" Match="NavLinkMatch.All">
                    <i class="bi bi-speedometer2"></i> Overview
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="/dashboard/products">
                    <i class="bi bi-box-seam"></i> Products
                </NavLink>
            </li>
            <li class="nav-item">
                <a class="nav-link orders-dropdown-toggle d-flex align-items-center" @onclick="ToggleOrders" aria-expanded="@IsOrdersExpanded" role="button" tabindex="0">
                    <span><i class="bi bi-bag-check"></i> Orders</span>
                    <i class="bi bi-caret-right-fill arrow"></i>
                </a>
                @if (IsOrdersExpanded)
                {
                    <ul class="orders-submenu">
                        <li>
                            <NavLink class="nav-link" href="/dashboard/orders/placed">
                                <i class="bi bi-cart-check"></i> Placed
                            </NavLink>
                        </li>
                        <li>
                            <NavLink class="nav-link" href="/dashboard/orders/received">
                                <i class="bi bi-inbox-fill"></i> Received
                            </NavLink>
                        </li>
                    </ul>
                }
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="/dashboard/chats">
                    <i class="bi bi-chat-dots"></i> Chats
                </NavLink>
            </li>
        </ul>
    </nav>

    <main class="dashboard-main">
        @Body
    </main>

    <button class="btn btn-primary sidebar-toggle-btn" @onclick="ToggleSidebar" aria-label="Toggle sidebar">
        <i class="bi bi-list"></i>
    </button>
</div>

@code {
    private bool IsOrdersExpanded = true;
    private bool IsSidebarExpanded = false;

    private void ToggleOrders() => IsOrdersExpanded = !IsOrdersExpanded;

    private void ToggleSidebar() => IsSidebarExpanded = !IsSidebarExpanded;
}
