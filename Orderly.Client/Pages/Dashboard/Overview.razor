    window.renderSalesChart = function (salesData, xMin, xMax, theme) {
        var isDark = theme === 'dark';

        var options = {
            chart: {
                type: 'line',
                height: 300,
                zoom: {
                    enabled: true,
                    type: 'x',
                    autoScaleYaxis: true,
                },
                toolbar: {
                    autoSelected: 'zoom'
                }
            },
            series: [{
                name: 'Revenue',
                data: salesData
            }],
            xaxis: {
                type: 'datetime',
                min: xMin,
                max: xMax,
            },
            tooltip: {
                enabled: true,
                style: {
                    fontSize: '14px',
                    fontFamily: 'Arial, sans-serif',
                    color: 'var(--fg)',          // Text color from your theme
                },
                theme: 'dark', // keep it for basic dark mode behavior, but we override colors below
                onDatasetHover: {
                    highlightDataSeries: true,
                },
                marker: {
