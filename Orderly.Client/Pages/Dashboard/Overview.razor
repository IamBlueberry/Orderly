                background: 'var(--nav-bg)',     // Tooltip background color
                borderColor: 'var(--primary)',   // Tooltip border color
                borderWidth: 1,
                shadow: {
                    enabled: true,
                    color: 'rgba(0,0,0,0.3)',
                    top: 1,
                    left: 1,
                    blur: 3,
                    opacity: 0.7,
                },
                y: {
                    formatter: function (value, { dataPointIndex, w }) {
                        var orders = w.config.series[0].data[dataPointIndex].orders;
                        var formattedRevenue = new Intl.NumberFormat('en-GB', {
                        style: 'currency',
                        currency: 'GBP',
                        }).format(value);
                        return `${formattedRevenue}<br/>Orders: ${orders}`;
                    },
                    title: {
